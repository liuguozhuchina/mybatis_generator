<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.huayu.entity.personal.QuestionsDao">
    <resultMap id="questions" type="com.huayu.entity.personal.Questions">
        <id column="id" property="id"/>
        <result column="dna_ques" property="dnaQues"/>
        <result column="type" property="type"/>
        <result column="question_id" property="questionId"/>
    </resultMap>

    <!-- Select SQL -->
    <sql id="selector">
        SELECT
        <if test="fields != null and fields!='' ">
        ${fields}
        </if>
        <if test="fields == null or fields=='' ">
        id,dna_ques,type,question_id
        </if>
        FROM questions
    </sql>

    <!-- Where SQL -->
    <sql id="Listwhere">
     <where>
        <if test="id!= null ">
            AND id= #{id}
        </if>
        <if test="dnaQues!= null and dnaQues!='' ">
            AND dna_ques= #{dnaQues}
        </if>
        <if test="type!= null ">
            AND type= #{type}
        </if>
        <if test="questionId!= null ">
            AND question_id= #{questionId}
        </if>
     </where>
    </sql>

    <!-- Order SQL -->
    <sql id="Listorder">
        <if test="orderFields != null and orderFields.size >0">
            order by
            <foreach collection="orderFields" separator="," item="orderField">
            ${orderField.fieldName} ${orderField.order}
            </foreach>
        </if>
    </sql>

    <!-- Page limit SQL -->
    <sql id="ListLimit">
        <if test="startRow >=0">
         limit #{startRow},#{pageSize}
        </if>
    </sql>

    <!-- 添加 -->
    <insert id="addQuestions" parameterType="com.huayu.entity.personal.Questions">
        INSERT INTO  questions
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id!= null ">
             id,
            </if>
            <if test="dnaQues!= null and dnaQues!='' ">
             dna_ques,
            </if>
            <if test="type!= null ">
             type,
            </if>
            <if test="questionId!= null ">
             question_id,
            </if>
        </trim>
        <trim prefix="VALUES (" suffix=")" suffixOverrides=",">
            <if test="id!= null ">
              #{id},
            </if>
            <if test="dnaQues!= null and dnaQues!='' ">
              #{dnaQues},
            </if>
            <if test="type!= null ">
              #{type},
            </if>
            <if test="questionId!= null ">
              #{questionId},
            </if>
        </trim>
    </insert>

    <!-- 批量添加 -->
    <insert id="addQuestionss" parameterType="java.util.List">
        INSERT INTO  questions(id,dna_ques,type,question_id)
        VALUES
        <foreach collection="list" item="item" index="index" separator=",">
            (#{item.id},#{item.dnaQues},#{item.type},#{item.questionId})
        </foreach>
    </insert>

    <!-- 根据主键删除 -->
    <delete id="deleteByKey" parameterType="long">
        DELETE FROM  questions
        WHERE   id=#{id}
    </delete>

    <!-- 根据主键批量删除 -->
    <delete id="deleteByKeys">
        DELETE FROM  questions
        WHERE    id in
        <foreach collection="list" separator="," item="id" open="(" close=")">
        #{id}
        </foreach>
    </delete>

    <!-- 根据条件删除 -->
    <delete id="deleteByQuery" parameterType="com.huayu.entity.personal.Questions">
        DELETE FROM  questions
        <include refid="Listwhere" />
    </delete>

    <!-- 根据条件删除 -->
    <delete id="deleteByMap" parameterType="map">
        DELETE FROM  questions
        <include refid="Listwhere" />
    </delete>

       <!-- 根据主键更新 -->
    <update id="updateQuestionsByKey" parameterType="com.huayu.entity.personal.Questions">
        UPDATE questions
        <set>
            <trim suffixOverrides=",">
                <if test="id!= null ">
                id= #{id},
                </if>
                <if test="dnaQues!= null and dnaQues!='' ">
                dna_ques= #{dnaQues},
                </if>
                <if test="type!= null ">
                type= #{type},
                </if>
                <if test="questionId!= null ">
                question_id= #{questionId},
                </if>
            </trim>
        </set>
        WHERE  id= #{id}
    </update>

    <!-- 根据map更新 -->
    <update id="updateQuestionsByMap" parameterType="map">
        UPDATE questions
        <set>
            <trim suffixOverrides=",">
                <if test="id!= null" >
                id= #{id},
                </if>
                <if test="dnaQues!= null and dnaQues!=''" >
                dna_ques= #{dnaQues},
                </if>
                <if test="type!= null" >
                type= #{type},
                </if>
                <if test="questionId!= null" >
                question_id= #{questionId},
                </if>
            </trim>
        </set>
        WHERE  id= #{id}
    </update>

    <!-- 根据主键查询 -->
    <select id="getQuestionsByKey" resultMap="questions" parameterType="com.huayu.entity.personal.Questions">
        SELECT id,dna_ques,type,question_id FROM questions
        WHERE  id= #{id}
    </select>

    <!-- 根据主键批量查询 -->
    <select id="getQuestionssByKeys" resultMap="questions" parameterType="map">
        SELECT id,dna_ques,type,question_id FROM questions
        WHERE
    id in
        <foreach collection="list" separator="," item="id" open="(" close=")">
        #{id}
        </foreach>
    </select>

    <!-- 分页 -->
    <select id="getQuestionsListWithPage" parameterType="map" resultMap="questions">
        <include refid="selector" />
        <include refid="Listwhere" />
        <include refid="Listorder" />
        <include refid="ListLimit" />
    </select>

    <!-- 数据集合 -->
    <select id="getQuestionsList" parameterType="map" resultMap="questions">
        <include refid="selector" />
        <include refid="Listwhere" />
        <include refid="Listorder" />
    </select>

    <!-- 数据总数 -->
    <select id="getQuestionsListCount" parameterType="map" resultType="int">
        SELECT count(1) FROM questions
        <include refid="Listwhere" />
    </select>



</mapper>



